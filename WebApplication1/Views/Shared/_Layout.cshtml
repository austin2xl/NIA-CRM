<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Niagara Industrial Association CRM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <style>
        /* General Styles */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
        }

        /* Navbar Styles */
        .navbar {
            background-color: #ffffff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand img {
            max-height: 60px;
        }

        .nav-link {
            color: #333333;
            margin-right: 15px;
            transition: color 0.3s ease;
        }

            .nav-link:hover {
                color: #faa61a;
            }

        .dropdown-menu {
            border-radius: 8px;
            border: none;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Search Bar */
        .search-bar input {
            border-radius: 30px;
            border: 1px solid #ccc;
            padding: 8px 20px;
            transition: all 0.3s ease;
        }

            .search-bar input:focus {
                outline: none;
                border-color: #faa61a;
                box-shadow: 0 0 5px rgba(250, 166, 26, 0.5);
            }

        .search-bar button {
            background-color: #faa61a;
            color: #ffffff;
            border-radius: 30px;
            padding: 8px 20px;
            border: none;
            transition: background-color 0.3s ease;
        }

            .search-bar button:hover {
                background-color: #e9961e;
            }

        /* Footer Styles */
        .footer {
            background-color: #f8f9fa;
            border-top: 1px solid #ddd;
        }

            .footer a {
                color: #faa61a;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }

        /* Main Content */
        main {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/css/Logo1.PNG" alt="Niagara Industrial Association" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="companyMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Company Management
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="companyMenu">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Company" asp-action="Index">Companies</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="CompanyIndustry" asp-action="Index">Industries</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Address" asp-action="Index">Addresses</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="MembershipCancellation" asp-action="Index">Membership Cancellation</a></li>

                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="contactMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Contact Management
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="contactMenu">
                                <li><a class="dropdown-item" asp-area="" asp-controller="ContactCompany" asp-action="Index">Contact Companies</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Contact" asp-action="Index">Contacts</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Interaction" asp-action="Index">Interactions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Opportunity" asp-action="Index">Opportunities</a>
                        </li>
                    </ul>
                    <form class="d-flex search-bar" role="search">
                        <input class="form-control me-2"
                               type="search"
                               placeholder="Search..."
                               aria-label="Search">
                        <button class="btn"
                                type="submit">
                            Search
                        </button>
                    </form>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-muted mt-auto py-3">
        <div class="container text-center">
            &copy; 2025 - Niagara Industrial Association CRM - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
